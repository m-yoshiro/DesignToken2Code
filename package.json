{
  "name": "designtoken2code",
  "version": "0.1.0",
  "license": "MIT",
  "repository": "https://github.com/m-yoshiro/DesignToken2Code",
  "description": "Convert design tokens to SCSS variables as code",
  "engines": {
    "sketch": ">=3.0"
  },
  "skpm": {
    "name": "DesignToken2Code",
    "manifest": "src/manifest.json",
    "main": "designtoken2code.sketchplugin",
    "assets": [
      "assets/**/*"
    ]
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link",
    "lint-staged": "lint-staged",
    "prettier:base": "prettier --single-quote --trailing-comma es5 --no-semi --write",
    "prettify": "npm run prettier:base \"./src/**/*.js\"",
    "test": "mocha --require @babel/register --recursive"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@skpm/builder": "^0.5.2",
    "chai": "^4.1.2",
    "eslint": "^5.6.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-babel": "^5.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-no-not-accumulator-reassign": "^0.1.0",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^1.0.0-rc.14",
    "lint-staged": "^7.2.2",
    "mocha": "^5.2.0",
    "prettier": "^1.14.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier:base",
      "eslint --fix",
      "git add"
    ]
  },
  "author": "m-yoshiro",
  "dependencies": {}
}
